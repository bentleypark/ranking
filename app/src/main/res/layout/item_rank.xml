<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="26dp"
    android:layout_marginVertical="6dp">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:textColor="@color/rank_text"
        android:textSize="22sp"
        tools:text="1" />

    <ImageView
        android:id="@+id/iv_profile_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/tv_rank" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/iv_profile_img"
        android:textColor="@color/nickname_text"
        android:textSize="14sp"
        tools:text="동친구해요,26" />

    <TextView
        android:id="@+id/tv_diff_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@id/iv_rank_arrow"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="14" />

    <ImageView
        android:id="@+id/iv_rank_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/wippy_ranking_arrow_icon"
        android:visibility="gone" />
</RelativeLayout>